<html>
    <head>
        <title>
           Verification
        </title>
        <link rel="stylesheet" href="./css/reset.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="./css/Theme.css">
        <link rel="stylesheet" href="./css/Login.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
         <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    </head>
    <body>
        <%- include('header',{Profile:Name,mobile:Mobile,pic:dp}) %>
       
            <div class="alert  hide">
                <span class="fas fa-exclamation-circle"></span>
                <span class="msg">Successfully Login!!</span>
                <span class="close-btn" >
                <span  class="fas fa-times"></span>
                </span>
            </div>
        
        <div id="Login">
           <div id="form-div">
               <div id="heading-div"><h1>Password</h1></div>
            <form  action"/forgetpass" method="POST">
                <input type="hidden" name="username" value="<%= n %>">
            <div><input type="text" name="password" placeholder="Enter password " required ></div>
               <input type="password" name="Confirm Password" placeholder="Confirm password" required>
               <button type="submit" class="btn4"">SUBMIT<i class="fas fa-arrow-right"></i></button>
               <h2>Not Registered/<a href="/SignUp">SignUp</a></h2>
            </form>
           </div>
        </div>
          <h2>All Rights Reserved @ Tvastra 2020</h2>

          <script>
            $('.close-btn').click(function(){
                    $(".alert").addClass("hide");
                    $(".alert").removeClass("show");
            });
            $('.btn4').click(function(){
                    $(".alert").removeClass("hide");
                    $(".alert").addClass("show");
                    setTimeout(function(){
                        $(".alert").addClass("hide");
                        $(".alert").removeClass("show");
                    },5000);   
            });

         </script>
          
        </body>
        </html>