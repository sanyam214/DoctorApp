<html>
    <head>
        <title>
            Doctor's Profile
        </title>
        <link rel="stylesheet" href="../css/reset.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../css/Theme.css">
        <link rel="stylesheet" href="../css/doctor's-profile.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    </head>
    <body>
      <%- include('header',{Profile:Name,mobile:Mobile,pic:dp}) %>
        <div id="Hero-dentistry">
                
            <div id="info-div">
         <h2>About <%= doctordetails.DoctorName %></h2>
         <h3>Home/Doctor profile</h3>
       
        </div>
        
    </div>

    <div id="container">
        <div id="doctor-profile">
           <div id="doctor-image">
               <img src="../../uploads/doctors/avatars/<%= doctordetails.avatar %>">
               <button>Book an Appointment</button>
           </div>
           <div id="info-container">
           <div id="info">
               <h1><%= doctordetails.DoctorName %></h1>
               <p>
                 <%= doctordetails.Description %>
               </p>
           </div>

           <button class="collapsible"><i class="fas fa-certificate" id="icons"></i><h3>Specialization</h3></button>
           <div class="content">
            <p>
              <%= doctordetails.Speciality %>
            </p>
             </div>

              <button class="collapsible"><i class="fas fa-stethoscope" id="icons"></i><h3>List of Treatments</h3></button>
              <div class="content">
                 <p><%= doctordetails.Treatment %></p>
                  </div>
               <button class="collapsible"><i class="fas fa-building" id="icons"></i><h3>Work Experience </h3></button>
               <div class="content">
                 <p><%= doctordetails.Experience+" Years of experience" %></p>
                  </div>

                  <button class="collapsible"><i class="fas fa-star" id="icons"></i>
                    <h3>Qualification</h3></button>
                  <div class="content">
                    <p><%= doctordetails.Education %></p>
                     </div>

                     <button class="collapsible"><i class="fas fa-trophy" id="icons"></i>
                        <h3>Awards</h3></button>
                     <div class="content">
                       <p><%= doctordetails.Awards %></p>
                        </div>

                        <button class="collapsible"><i class="fas fa-map-marker-alt" id="icons"></i>
                            <h3>Location</h3></button>
                        <div class="content">
                          <p><%= doctordetails.Location %></p>
                           </div>

                           <button class="collapsible"><i class="fas fa-rupee-sign" id="icons"></i>
                            <h3>Avg Fees</h3></button>
                           <div class="content">
                             <p><%= doctordetails.AvgFees %></p>
                              </div>
           </div>
        </div>
    </div>
     
    <section class="NeedHelp">
      <h2>Need Help?</h2>
      <p >Just Let us Know .We will be happy to assist you.</p>
      <button><a href="/submitquery">Submit your Query</a></button>
  </section>


  <%- include('footer') %>
       <script>
        var coll = document.getElementsByClassName("collapsible");
        var i;
        
        for (i = 0; i < coll.length; i++) {
          coll[i].addEventListener("click", function() {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.maxHeight){
              content.style.maxHeight = null;
            } else {
              content.style.maxHeight = content.scrollHeight + "px";
            } 
          });
        }
        </script>
          <script>
            function myloader(){
                setTimeout(function() {
                    var preloader=document.getElementById("loading");
                    preloader.style.display="none";
                }, 5000);
            }
        </script>
    </body>

    </html>